{
    "name": "Medspell Auto Suggest",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "An extension that auto-corrects the user's spelling as they type",
    "permissions": [
      "tabs",
      "activeTab",
      "storage"
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
  },
  "action": {
    "default_icon": {
        "16": "icon.png",
        "24": "icon.png",
        "32": "icon.png"
    },
    "default_title": "Medspell",
    "default_popup": "popup.html"
},
    "content_scripts": [
      {
        "matches": ["https://stage-admin.medspellapp.com/*"],
        "js": ["content.js"]
      }
    ],
    "background":{
      "service_worker":"background.js"
    }
  }
  